{% extends 'ALTaxonomyBundle::layout.html.twig' %}

{% block taxonomy_title %}<h1>Term <em>{{ entity.name }}</em></h1>{% endblock %}

{% block taxonomy_content -%}

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Label name</th>
            <td>{{ entity.labelName }}</td>
        </tr>
        <tr>
            <th>Weight</th>
            <td>{{ entity.weight }}</td>
        </tr>
        </tbody>
    </table>

    {{ parent() }}

{% endblock %}

{% block taxonomy_actions -%}

    <li>
        <a href="{{ path('al_taxonomy_edit_term', { 'id': entity.id, 'vocabulary_id': vocabulary_id }) }}" class="btn btn-primary">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
    <li>
        <a href="{{ path('al_taxonomy_list_terms', { 'vocabulary_id': vocabulary_id }) }}" class="btn btn-default">
            Back to the list
        </a>
    </li>

{% endblock %}
